<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Judging & Scoring System</title>
  <!-- Bootstrap 5 CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      padding-top: 30px;
    }
    .score-input {
      width: 70px;
    }
    .leaderboard {
      margin-top: 30px;
    }
    .card {
      margin-bottom: 20px;
    }
    .highlight {
      background-color: #d1e7dd;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2 class="text-center mb-4">üèÜ Judging & Scoring System</h2>

    <div class="mb-4">
      <label for="judgeName" class="form-label">Judge Name</label>
      <input type="text" class="form-control" id="judgeName" placeholder="Enter your name">
    </div>

    <div id="participantsContainer"></div>

    <div class="text-center">
      <button class="btn btn-primary mt-3" onclick="submitScores()">Submit Scores</button>
    </div>

    <div class="leaderboard">
      <h3 class="mt-5">üìä Leaderboard</h3>
      <div id="resultsContainer" class="list-group"></div>
    </div>
  </div>

  <script>
    const participants = ['Team Alpha', 'Team Beta', 'Team Gamma'];
    const criteria = [
      { name: 'Creativity', weight: 0.3 },
      { name: 'Technical Skill', weight: 0.4 },
      { name: 'Presentation', weight: 0.3 }
    ];

    const container = document.getElementById('participantsContainer');

    participants.forEach((participant, pIndex) => {
      const card = document.createElement('div');
      card.className = 'card';
      card.innerHTML = `
        <div class="card-body">
          <h5 class="card-title">${participant}</h5>
          ${criteria.map((crit, cIndex) => `
            <div class="mb-2">
              <label>${crit.name}</label>
              <input type="number" min="0" max="10" step="0.1" 
                class="form-control score-input" 
                id="score-${pIndex}-${cIndex}" 
                placeholder="0 - 10">
            </div>
          `).join('')}
        </div>
      `;
      container.appendChild(card);
    });

    function submitScores() {
      const judge = document.getElementById('judgeName').value.trim();
      if (!judge) {
        alert("Please enter your name before submitting.");
        return;
      }

      const results = [];

      participants.forEach((participant, pIndex) => {
        let total = 0;
        let allFilled = true;

        criteria.forEach((crit, cIndex) => {
          const input = document.getElementById(score-${pIndex}-${cIndex});
          const score = parseFloat(input.value);
          if (isNaN(score)) {
            allFilled = false;
          }
          total += (score || 0) * crit.weight;
        });

        if (allFilled) {
          results.push({ name: participant, score: total.toFixed(2) });
        }
      });